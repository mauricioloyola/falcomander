{% extends '::base.html.twig' %}

{% block stylesheets %}   
  <!-- Bootstrap 3.3.2 -->
  <link href="{{ asset(global.directorio_css_bootstrap ~ "bootstrap.min.css")}}" rel="stylesheet" type="text/css" />
  
  <!-- Font Awesome Icons -->
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
  <!-- Ionicons -->
  <link href="http://code.ionicframework.com/ionicons/2.0.0/css/ionicons.min.css" rel="stylesheet" type="text/css" />

  <!-- Theme style -->
  <link href="{{ asset(global.directorio_css ~ "AdminLTE.min.css")}}" rel="stylesheet" type="text/css" />  
  <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
        page. However, you can choose any other skin. Make sure you
        apply the skin class to the body tag so the changes take effect.
  -->
  <link href="{{ asset(global.directorio_css ~ "skins/skin-blue.min.css")}}" rel="stylesheet" type="text/css" />  
{% endblock %}

{% block menu_opciones %}
  <li {% block active_inicio %}{% endblock %}><a href="{{ path('backend_homepage') }}"><span>{{'Inicio'}}</span></a></li>
  
  <!-- Tablas Principales -->
  <li {% block active_tabla_principal %}{% endblock %}>
    <a href="#"><span>Tablas Principales</span> <i class="fa fa-angle-left pull-right"></i></a>
    <ul class="treeview-menu">
      <li {% block active_tabla_categoria %}{% endblock %}><a href="{{ path('categoria') }}">{{'Categor√≠as'}}</a></li>      
    </ul>
  </li>
  <!-- Fin Tablas Principales -->

  <!-- Tablas Seguridad -->
  <li {% block active_tabla_seguridad %}{% endblock %}>
    <a href="#"><span>Tablas de Seguridad</span> <i class="fa fa-angle-left pull-right"></i></a>
    <ul class="treeview-menu">
      <li {% block active_tabla_seg_usuario %}{% endblock %}><a href="{{ path('categoria') }}">{{'Usuarios'}}</a></li>      
    </ul>
  </li>
  <!-- Fin Tablas Principales -->
{% endblock %}


{% block body %}
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      {% block titulo_page %}{% endblock %}          
      <small>{% block descrip_opcional %}{% endblock %}</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i>{% block level %}{% endblock %}</a></li>
      <li class="active">{% block here %}{% endblock %}</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">          
    {% block contenido %}{% endblock %}  
  </section><!-- /.content -->
{% endblock %}  


{% block javascripts %}  
  <!-- REQUIRED JS SCRIPTS -->    
    <!-- jQuery 2.1.3 -->    
    <script src="{{ asset(global.directorio_plugins ~ "jQuery/jQuery-2.1.3.min.js")}}"></script>
    <!-- Bootstrap 3.3.2 JS -->    
    <script src="{{ asset(global.directorio_js_bootstrap ~ "bootstrap.min.js")}}" type="text/javascript"></script>
    <!-- AdminLTE App -->    
    <script src="{{ asset(global.directorio_js ~ "app.min.js")}}" type="text/javascript"></script>    
    <!-- Optionally, you can add Slimscroll and FastClick plugins. 
          Both of these plugins are recommended to enhance the 
          user experience -->   
{% endblock %}

