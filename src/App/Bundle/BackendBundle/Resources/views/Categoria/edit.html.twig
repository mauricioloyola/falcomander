{% extends '::backend.html.twig' %}

{% block title %}{{ 'Tabla de Categorías'}} - {{ 'Editar'}}{% endblock %} 

{% block titulo_page %}{{ 'Categorías'}}{% endblock %}          

{% block descrip_opcional %}{{ 'Tabla de registro de categorías'}}.{% endblock %}

{% block level %}{{ 'Tablas Principales'}}{% endblock %}

{% block here %}{{ 'Categorías'}}{% endblock %}

{% block active_inicio %}{% endblock %}
{% block active_tabla_principal %}class="active treeview"{% endblock %}
{% block active_tabla_categoria %}class="active"{% endblock %}

{% block contenido %}
<div class="row">	
	<!-- left column -->
  <div class="col-md-6">
    <!-- general form elements -->
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">{{ 'Editar'}}</h3>
      </div><!-- /.box-header -->
      
      {{ form_start(edit_form, {'attr': {'role': 'form'}}) }}
      <div class="box-body">
        
        {{ form_errors(edit_form) }} 

        <div class="form-group">              
          {% if form_errors(edit_form.descripcion) == '' %}
          
          {% else %} 
            <div class="alert alert-danger">{{ form_errors(edit_form.descripcion) }}</div>   
          {% endif %}                        
          {{ form_label(edit_form.descripcion) }}
          {{ form_widget(edit_form.descripcion) }}
          {#{{ form_widget(edit_form.descripcion, {'attr': {'class': 'form-control'}}) }}#}
        </div>

        <div class="form-group">              
          {% if form_errors(edit_form.activo) == '' %}
          
          {% else %} 
            <div class="alert alert-danger">{{ form_errors(edit_form.activo) }}</div>   
          {% endif %}                        
          
          {{ form_widget(edit_form.activo) }}
          {{ form_label(edit_form.activo) }}          
        </div>
      </div><!-- /.box-body -->
      
      <div class="box-footer col-xs-12 col-sm-12 col-md-12 col-lg-12">

        <div class="form-group col-xs-4 col-sm-3 col-md-4 col-lg-3">
          <a href="{{ path('categoria') }}" class="btn btn-primary btn-md" title="{{ 'Regresar'}}"><span class="glyphicon glyphicon-th-list"></span>{{ 'Listado'}}</a>
        </div>

        <div class="form-group col-xs-4 col-sm-3 col-md-4 col-lg-3">
          <button type="submit" class="btn btn-success btn-md">
            <span class="glyphicon glyphicon-ok"></span> {{ 'Guardar'}}
          </button>                    
        </div>        
        
        <div class="form-group col-xs-4 col-sm-3 col-md-4 col-lg-3">
          <button type="reset" class="btn btn-danger btn-md">
            <span class="glyphicon glyphicon-refresh"></span>{{ 'Cancelar'}}
          </button>      
        </div>

      </div>
      {{ form_end(edit_form) }}
    </div><!-- /.box -->
</div>	
</div>  
{% endblock %} 


