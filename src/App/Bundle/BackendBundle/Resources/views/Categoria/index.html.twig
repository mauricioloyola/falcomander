{% extends '::backend.html.twig' %}

{% block title %}{{ 'Tabla de Categorías'}}{% endblock %} 

{% block titulo_page %}{{ 'Categorías'}}{% endblock %}          

{% block descrip_opcional %}{{ 'Tabla de registro de categorías'}}.{% endblock %}

{% block level %}{{ 'Tablas Principales'}}{% endblock %}

{% block here %}{{ 'Categorías'}}{% endblock %}

{% block active_inicio %}{% endblock %}
{% block active_tabla_principal %}class="active treeview"{% endblock %}
{% block active_tabla_categoria %}class="active"{% endblock %}

{% block contenido %}
<div class="row">	
	<div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title">{{ 'Listado de Categorías'}}</h3>
      </div><!-- /.box-header -->

      <div class="box-body">
        
        <div class="form-group">
          <a href="{{ path('categoria_new') }}" class="btn btn-primary btn-md">
            <i class="fa fa-plus"></i> {{ 'Agregar'}}
          </a>                	
        </div>
        
        <table id="example1" class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>{{'Id'}}</th>
              <th>{{'Categoría'}}</th>
              <th>{{'Estado'}}</th>  
              <th>{{'Acciones'}}</th>                      
            </tr>
          </thead>
          <tbody>
            {% for entity in entities %}	
              <tr>
                <td><a href="{{ path('categoria_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.descripcion }}</td>
                <td>
                  {% if entity.activo %}  
                    <span class="label label-success">{{'Activo'}}</span>
                  {% else %}                 
                    <span class="label label-danger">{{'Inactivo'}}</span>
                  {% endif %}                 
                </td>  
                <td>                        	                        	
                  <a href="{{ path('categoria_show', { 'id': entity.id }) }}" class="btn btn-info btn-sm" title="Ver"><i class="fa fa-eye"></i></a>
                  <a href="{{ path('categoria_edit', { 'id': entity.id }) }}" class="btn btn-warning btn-sm" title="Editar"><i class="fa fa-pencil"></i></a>
                  <a href="{{ path('categoria_show', { 'id': entity.id }) }}" class="btn btn-danger btn-sm" title="Eliminar"><i class="fa fa-times"></i></a>
                </td>                      
              </tr>
            {% endfor %}                 
        	<tbody>
        	<tfoot>
            <tr>
              <th>{{'Id'}}</th>
              <th>{{'Categoría'}}</th>
              <th>{{'Estado'}}</th>  
              <th>{{'Acciones'}}</th> 
            </tr>
          </tfoot>	
        </table>	  	
        	  
      </div>			  
    	   
    </div>                  
  </div>
</div>	
{% endblock %} 


{% block javascripts %}  
  <!-- REQUIRED JS SCRIPTS -->    
    {{ parent() }}

	<!-- DATA TABES SCRIPT -->
    <script src="{{ asset(global.directorio_plugins ~ "datatables/jquery.dataTables.js")}}" type="text/javascript"></script>
    <script src="{{ asset(global.directorio_plugins ~ "datatables/dataTables.bootstrap.js")}}" type="text/javascript"></script>

    <!-- SlimScroll -->
    <script src="{{ asset(global.directorio_plugins ~ "slimScroll/jquery.slimscroll.min.js")}}" type="text/javascript"></script>
    <!-- FastClick -->
    <script src="{{ asset(global.directorio_plugins ~ "fastclick/fastclick.min.js")}}"></script>
    <!-- AdminLTE for demo purposes -->
    {#<script src="{{ asset(global.directorio_js ~ "demo.js")}}" type="text/javascript"></script>#}
    
    <!-- page script -->
    <script type="text/javascript">
      $(function () {
        $("#example1").dataTable();
        $('#example2').dataTable({
          "bPaginate": true,
          "bLengthChange": false,
          "bFilter": false,
          "bSort": true,
          "bInfo": true,
          "bAutoWidth": false
        });
      });
    </script>          
{% endblock %}

